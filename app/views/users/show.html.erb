<p id="notice"><%= notice %></p>
  <div class="container-fluid content-wrapper">

    <div class="row-fluid">
      <div class="span12">
        <div class="hero-unit non-index">
            <div class="minidash">
              <span class="title-name">Swaps</span>
              <p><%=current_user.recuest_collection(:type=>"Swap", :status=>1).count%></p>
            </div>
            <div class="minidash">
              <span class="title-name">Pieces</span>
              <p><%=current_user.recuest_collection(:type=>"Piece").count%></p>
            </div>
              <div class="clearfix"></div>
            <div class="minidash">
              <span class="title-name">Lastlonger</span>
               <p><%=current_user.recuest_collection(:type=>"Lastlonger").count%></p>
            </div>
            <div class="minidash">
              <span class="title-name">Owe</span>
              <p><%=current_user.total_debt%></p>
            </div>

            <div class="minidash">
              <span class="title-name">Owed</span>
                <%=current_user.total_owed%>
            </div>
            <div class="minidash">
              <span class="title-name">Tickets</span>
            </div>
            <div class="minidash">
              <span class="title-name">Awaiting Response</span>
              <p><%=current_user.pending_recuests.count%>
            </div>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <ul class="breadcrumb">
          <li>
            <a href="index.html">
              <i class="radmin-icon radmin-home"></i>
              Dashboard
            </a>
            <span class="divider">/</span>
          </li>
          <li>
            <a href="#">
              <i class="radmin-icon radmin-file"></i>
              Sample Pages
            </a>
            <span class="divider">/</span>
          </li>
          <li class="active">
            <i class="radmin-icon radmin-user"></i>
            Users
          </li>
        </ul>
      </div>
    </div>
    <div class="row-fluid hidden-tablet hidden-phone">
      <div class="span12">
        <h5 class="new_recuest"><%= link_to "New Swap", new_user_swap_path(current_user)%></h5>
        <h5 class="new_recuest"><%= link_to "New Piece", new_user_piece_path(current_user)%></h5>
        <h5 class="new_recuest"><%= link_to "New Last Longer", new_user_lastlonger_path(current_user)%>
        <h4 class="title">Pending Requests</h4>
        <div class="squiggly-border"></div>

        <table class="table table-striped table-bordered table-radmin">
          <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Tournament</th>
              <th>Amount</th>
              <th style="text-align:center; width: 63px">Accept</th>
              <th style="text-align:center; width: 89px">Deny</th>
              <th style="text-align:center; width: 77px">Edit</th>
            </tr>
          </thead>
          <%# create a partial %>
          <tbody>
            <%@pending_inbound_recuests.each do |recuest| %>
            <tr>
              <td><%=recuest.user.name%></td>
              <td><%=recuest.type%></td>
              <td><%#=recuest.tournament.name%></td>
              <td><%=recuest.percent%>%</td>
              <%= form_for recuest, {url: user_recuest_path(current_user, recuest)} do |f|%>
              <td>
              <%= f.submit 'Accept', :value => 'Accept', :name=>"status", :class=>"btn btn-small btn-danger"  %>
              </td>
              <td>
              <%= f.submit "Deny", :value=>"Deny", :name=>"status", :class=>"btn btn-small btn-info"%>
              </td>
              <td>

                <% if recuest.updateable?%> 
                  <%= f.submit "Edit", :value=>"Edit", :name=>"status", :class=>"btn btn-small"%>
                <%end%>
              </td>
              <%end%>
            <%end%>
            <% #Use oone of these button themes below#%>
          </tbody>
        </table>

        <div class="pagination pagination-right">
          <ul>
            <li class="disabled">
              <a href="#">Prev</a>
            </li>
            <li class="active">
              <a href="#">1</a>
            </li>
            <li>
              <a href="#">2</a>
            </li>
            <li>
              <a href="#">3</a>
            </li>
            <li>
              <a href="#">4</a>
            </li>
            <li>
              <a href="#">5</a>
            </li>
            <li>
              <a href="#">Next</a>
            </li>
          </ul>
        </div>

      </div>
    </div>     
</div>



